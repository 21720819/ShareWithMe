<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg_login_jh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_login_id_jh"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:background="@drawable/et_sp_bg"
        android:ems="10"
        android:hint="휴대폰 번호"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_login_logo_jh"
        app:layout_constraintStart_toStartOf="@+id/iv_login_logo_jh"
        app:layout_constraintTop_toBottomOf="@+id/iv_login_logo_jh" />

    <EditText
        android:id="@+id/et_login_pw_jh"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et_sp_bg"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/et_login_id_jh"
        app:layout_constraintStart_toStartOf="@+id/et_login_id_jh"
        app:layout_constraintTop_toBottomOf="@+id/et_login_id_jh" />

    <TextView
        android:id="@+id/tv_login_q_jh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="135dp"
        android:layout_marginTop="15dp"
        android:text="처음이신가요?"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/tv_login_new_jh"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_login_jh" />

    <android.widget.Button
        android:id="@+id/btn_login_login_jh"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/bt_bg"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_login_pw_jh"
        app:layout_constraintStart_toStartOf="@+id/et_login_pw_jh"
        app:layout_constraintTop_toBottomOf="@+id/et_login_pw_jh" />

    <TextView
        android:id="@+id/tv_login_new_jh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="135dp"
        android:text="회원가입"
        android:textColor="#F44336"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_login_q_jh"
        app:layout_constraintTop_toBottomOf="@+id/btn_login_login_jh" />

    <ImageView
        android:id="@+id/iv_login_logo_jh"
        android:layout_width="250dp"
        android:layout_height="205dp"
        android:layout_marginTop="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo3" />

</androidx.constraintlayout.widget.ConstraintLayout>
